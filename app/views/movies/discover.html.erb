<!DOCTYPE html>
<html>

<head>

</head>

<body>
  <div style="position=relative">
    <%= button_to 'Discover Top Rated Movies', "/users/#{@user.id}/results", method: :get, params: {q: 'top rated'} %>

    <%= form_with url: "/users/#{@user.id}/results", method: :get, local: true do |f| %>
      <%= f.text_field :search, place_holder: 'Search Terms' %>
      <%= f.submit 'Search' %>
    <% end %>
  </div>
</body>
</html>
