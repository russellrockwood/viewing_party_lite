<div id="title">
  <h1> <%= @movie.title %> </h1>
</div>

<div id="form">
  <%= form_with url: "/users/#{@user.id}/movies/#{@movie.movie_id}/parties", method: :post, local: true do |f| %>
    <%= f.label :duration %>
    <%= f.number_field :duration, required: true, value: @movie.runtime, min: @movie.runtime %><br><br>

    <%= f.label :start_timedate, 'Date' %>
    <%= f.date_field :start_date, required: true %><br><br>

    <%= f.label :start_time, 'Time' %>
    <%= f.time_field :start_time, required: true %><br><br>

    <p>Invite Users:</p>
    <% @users.each do |user| %>
      <div id="user-<%= user.id %>">
        <%= check_box_tag "invited[]", user.id %>
        <%= user.name %>
      </div>
    <% end %>


    <%= f.submit 'Create Party' %>
  <% end %>
</div>
