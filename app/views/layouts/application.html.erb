<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div>
      <%= render partial: '/layouts/partials/home_button_and_app_name' %><br>
    </div>

    <% flash.each do |type, notice| %>
        <div class="alert alert-info">
          <p><%= notice %></p>
        </div>
    <% end %>
    <%= yield %>
  </body>
</html>
